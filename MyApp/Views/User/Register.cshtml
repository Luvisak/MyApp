@model MyApp.Models.User

<h1>Register</h1>
<form asp-action="Register" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="PasswordHash" type="password" />
    </div>
    <button type="submit">Register</button>
</form>
